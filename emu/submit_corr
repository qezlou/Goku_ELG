#!/bin/bash
#SBATCH -J corr_pigs
#SBATCH -p skx
#SBATCH -N 1
#SBATCH --ntasks-per-node 48
#SBATCH --job-name=WpL2
#SBATCH --time=2:00:00
#SBATCH --output=%x-%j.out

hostname; pwd; date

BASEDIR='/scratch/06536/qezlou/Goku/FOF/L2/'
