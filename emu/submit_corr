ibrun python get_corr.py --ranks_for_nbkit 3 --base_dir $BASEDIR --z 2.5 --logging_level 'INFO' --stat 'corr' --mode 'projected' --pimax 40 --fft_model 0 --savedir $SAVEDIR --realizations 100